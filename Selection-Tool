<div id="results" class="results" style="display:none;">
  <h2>Your PPP dimension priorities</h2>
  <p>
    Dimensions are shown from <strong>highest priority (lowest rating)</strong> to lowest priority.
    You might choose one dimension for each PPP cycle, or focus on a single area across the year.
  </p>
  <ol id="ranked-list"></ol>

  <h3>Copy-and-paste summary</h3>
  <p class="note">
    You can copy the text below into a Word document or your PPP planning form.
  </p>
  <pre id="summary-text"></pre>
</div>

<script>
  const dimensions = [
    { id: 1, name: "Fostering active and inclusive learning" },
    { id: 2, name: "Connecting to learners’ prior knowledge and experience" },
    { id: 3, name: "Designing for Indigenous perspectives, diversity, equity and belonging" },
    { id: 4, name: "Developing deep conceptual understanding and critical thinking" },
    { id: 5, name: "Making learning outcomes and pathways transparent" },
    { id: 6, name: "Bridging theory, practice and interdisciplinary knowledge" },
    { id: 7, name: "Harnessing digital, physical and hybrid environments" },
    { id: 8, name: "Structuring and communicating learning clearly" },
    { id: 9, name: "Embedding feedback loops and assessment for learning" },
    { id: 10, name: "Cultivating creativity, wellbeing and lifelong learning" },
    { id: 11, name: "Developing metacognitive and self-regulatory learning" },
    { id: 12, name: "Integrating digital and AI literacy for learning" }
  ];

  function calculatePriorities() {
    const scores = [];
    const errorDiv = document.getElementById("error");
    errorDiv.textContent = "";

    for (let i = 1; i <= 12; i++) {
      const radios = document.querySelectorAll('input[name="q' + i + '"]');
      let value = null;
      radios.forEach(r => {
        if (r.checked) value = parseInt(r.value, 10);
      });

      if (value === null) {
        errorDiv.textContent = "Please rate all 12 dimensions before calculating.";
        document.getElementById("results").style.display = "none";
        return;
      }

      scores.push({ id: i, name: dimensions[i - 1].name, score: value });
    }

    // sort by ascending score (lowest rating = highest priority)
    scores.sort((a, b) => a.score - b.score);

    const list = document.getElementById("ranked-list");
    list.innerHTML = "";
    scores.forEach(item => {
      const li = document.createElement("li");
      li.textContent = item.name + " (rating: " + item.score + ")";
      list.appendChild(li);
    });

    let summary = "PPP dimension priorities (from highest to lowest):\n\n";
    scores.forEach((item, index) => {
      summary += (index + 1) + ". " + item.name + " – rating " + item.score + "\n";
    });
    summary += "\nTop 1–3 dimensions to consider for your PPP focus:\n";
    summary += "1. " + scores[0].name + "\n";
    summary += "2. " + scores[1].name + "\n";
    summary += "3. " + scores[2].name + "\n";

    document.getElementById("summary-text").textContent = summary;
    document.getElementById("results").style.display = "block";
  }
</script>

